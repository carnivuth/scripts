#!/bin/bash
SCRIPTS_LOGS_FOLDER="/var/log/scripts"

SCRIPTS_HOME_FOLDER="$HOME/scripts"

SCRIPTS_LOCAL_FOLDER="$HOME/.local/scripts"
if [[ ! -d "$SCRIPTS_LOCAL_FOLDER" ]] ;then mkdir "$SCRIPTS_LOCAL_FOLDER"; fi

SCRIPTS_RUN_FOLDER="/tmp/scripts"
if [[ ! -d "$SCRIPTS_RUN_FOLDER" ]] ;then mkdir "$SCRIPTS_RUN_FOLDER"; fi

ROFI_CONFIG_FOLDER="$HOME/.config/rofi"

SCRIPTS_LIBS_FOLDER="$SCRIPTS_HOME_FOLDER/lib"

DEFAULT_THEME="snorlax-line-bottom"